{
  "name": "www",
  "version": "1.0.0",
  "scripts": {
    "start": "hugo server",
    "build": "hugo --minify && npm run build:functions",
    "build:functions": "netlify-lambda build assets/lambda",
    "build:preview": "npm run build -D -F",
    "server": "hugo server",
    "clean": "rimraf public resources functions",
    "clean:deps": "node scripts/clean-deps",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles",
    "lint:scripts": "eslint themes/default/assets/js assets/lambda",
    "lint:styles": "stylelint \"themes/default/assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "install:deps": "bower install && grunt",
    "test": "npm run -s lint"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1",
    "autoprefixer": "^9.7",
    "eslint": "^6.8",
    "ga-lite": "^2.0.5",
    "grunt": "^1.1.0",
    "grunt-bower": "^0.21.4",
    "netlify-lambda": "^1.6",
    "postcss-cli": "^7.1",
    "purgecss-whitelister": "^2.4",
    "rimraf": "^3.0",
    "shelljs": "^0.8.4",
    "stylelint": "^13.2",
    "stylelint-config-standard": "^20.0"
  },
  "dependencies": {
    "bower": "^1.8.8"
  }
}
